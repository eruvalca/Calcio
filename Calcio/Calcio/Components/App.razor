<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <ResourcePreloader />
    <script>
        (function () {
            try {
                var storageKey = 'calcio.theme';
                var raw = localStorage.getItem(storageKey);
                // Normalize stored preference: accept Light/Dark/System (or legacy 'auto' => System), else default to System
                var v = (raw == null ? 'system' : String(raw).trim().toLowerCase());
                if (v === 'auto') {
                    v = 'system';
                }
                if (v !== 'light' && v !== 'dark' && v !== 'system') {
                    v = 'system';
                }

                // Persist the normalized canonical value (PascalCase) for consistency with app code
                var canonical = v === 'light' ? 'Light' : v === 'dark' ? 'Dark' : 'System';
                if (raw !== canonical) {
                    try { localStorage.setItem(storageKey, canonical); } catch { }
                }

                var effective = v === 'system'
                    ? (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light')
                    : v;
                document.documentElement.setAttribute('data-bs-theme', effective);
            } catch (e) { }
        })();
    </script>
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["Calcio.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <Routes />
    <ReconnectModal />
    <script src="@Assets["_framework/blazor.web.js"]"></script>
    <script src="@Assets["lib/bootstrap/dist/js/bootstrap.bundle.min.js"]"></script>
    <script src="@Assets["Components/Account/Shared/PasskeySubmit.razor.js"]" type="module"></script>
</body>

</html>
