@page "/Account/Manage/Clubs"
@using Calcio.Shared.DTOs.ClubJoinRequests
@using Calcio.Shared.DTOs.Clubs
@using Calcio.Shared.Enums
@using Calcio.UI.Components.Clubs.Shared

<PageTitle>Clubs</PageTitle>

<h3>Clubs</h3>
<StatusMessage />

@if (UserClubs.Count > 0)
{
    <h5>Your Clubs</h5>
    <ul class="list-group mb-4">
        @foreach (var club in UserClubs)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><strong>@club.Name</strong> &mdash; @club.City, @club.State</span>
                <div class="btn-group" role="group">
                    <a href="/clubs/@club.Id" class="btn btn-primary btn-sm">Manage</a>
                    @if (!IsClubAdmin)
                    {
                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal"
                            data-bs-target="#leaveClubModal-@club.Id">
                            Leave
                        </button>
                    }
                </div>
            </li>

            @if (!IsClubAdmin)
            {
                <div class="modal fade" id="leaveClubModal-@club.Id" tabindex="-1" aria-labelledby="leaveClubModalLabel-@club.Id"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="leaveClubModalLabel-@club.Id">Leave club</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>
                                    Are you sure you want to leave <strong>@club.Name</strong>?
                                </p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                                <EditForm Model="LeaveClubInput" method="post" OnValidSubmit="LeaveClub"
                                    FormName="@($"leaveClub-{club.Id}")">
                                    <input type="hidden" name="LeaveClubInput.ClubId" value="@club.Id" />
                                    <button type="submit" class="btn btn-danger">Leave club</button>
                                </EditForm>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </ul>
}
else
{
    @if (AllClubs.Count > 0)
    {
        <h5>Find and join an existing club</h5>

        <FilterableClubsGrid Clubs="AllClubs" CurrentJoinRequest="CurrentJoinRequest" @rendermode="InteractiveAuto" />
    }

    @if (CurrentJoinRequest?.Status != RequestStatus.Pending)
    {
        <h5>Create a club</h5>

        <EditForm Model="Input" method="post" OnValidSubmit="CreateClub" FormName="createClub" Enhance
            data-enhance-loading="createClubSubmitBtn">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />
            <div class="row g-3 mb-3">
                <div class="col-12 col-md-4">
                    <div class="form-floating">
                        <InputText @bind-Value="Input.Name" id="Input.Name" class="form-control" aria-required="true"
                            placeholder="Club Name" />
                        <label for="Input.Name">Club Name</label>
                    </div>
                    <ValidationMessage For="() => Input.Name" class="text-danger" />
                </div>
                <div class="col-6 col-md-4">
                    <div class="form-floating">
                        <InputText @bind-Value="Input.City" id="Input.City" class="form-control" aria-required="true"
                            placeholder="City" />
                        <label for="Input.City">City</label>
                    </div>
                    <ValidationMessage For="() => Input.City" class="text-danger" />
                </div>
                <div class="col-6 col-md-4">
                    <div class="form-floating">
                        <InputSelect @bind-Value="Input.State" id="Input.State" class="form-select" aria-required="true">
                            <option value="">-- Select State --</option>
                            @foreach (var s in UsStateAbbreviations)
                            {
                                <option value="@s">@s</option>
                            }
                        </InputSelect>
                        <label for="Input.State">State</label>
                    </div>
                    <ValidationMessage For="() => Input.State" class="text-danger" />
                </div>
            </div>
            <button type="submit" id="createClubSubmitBtn" class="btn btn-primary"
                onclick="this.disabled=true; this.innerHTML='<span class=\'spinner-border spinner-border-sm me-2\' role=\'status\' aria-hidden=\'true\'></span>Creating...'; this.form.requestSubmit();">
                Create Club
            </button>
        </EditForm>
    }
}