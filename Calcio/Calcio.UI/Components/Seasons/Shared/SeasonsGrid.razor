@using Calcio.Shared.DTOs.Seasons
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.QuickGrid

<div class="card shadow mb-4">
    <div class="card-header d-flex justify-content-between align-items-center gap-2">
        <form @onsubmit:preventDefault class="flex-grow-1">
            <div class="input-group" role="search">
                <input type="text" @bind-value="SearchTerm" @bind-value:event="oninput" id="SeasonSearch"
                    name="SeasonSearch" class="form-control" placeholder="Search by name, start date, or end date"
                    autocomplete="off" />
            </div>
        </form>
        @if (ShowCreateForm)
        {
            <button type="button" class="btn btn-outline-secondary" @onclick="ToggleCreateForm" disabled="@IsCreating">
                Cancel
            </button>
        }
        else
        {
            <button type="button" class="btn btn-primary" @onclick="ToggleCreateForm">
                <i class="bi bi-plus-lg me-1"></i>New Season
            </button>
        }
    </div>
    @if (ShowCreateForm)
    {
        <div class="card-body border-bottom">
            <EditForm Model="CreateInput" OnValidSubmit="HandleCreateSeason" FormName="createSeason">
                <DataAnnotationsValidator />
                @if (!string.IsNullOrEmpty(CreateErrorMessage))
                {
                    <div class="alert alert-danger py-2" role="alert">@CreateErrorMessage</div>
                }
                <div class="row g-3 align-items-end">
                    <div class="col-12 col-md-4">
                        <label for="seasonName" class="form-label small mb-1">Season Name</label>
                        <InputText @bind-Value="CreateInput.Name" id="seasonName" class="form-control form-control-sm"
                            placeholder="e.g., Spring 2025" />
                        <ValidationMessage For="() => CreateInput.Name" class="text-danger small" />
                    </div>
                    <div class="col-6 col-md-2">
                        <label for="startDate" class="form-label small mb-1">Start Date</label>
                        <InputDate @bind-Value="CreateInput.StartDate" id="startDate" class="form-control form-control-sm"
                            min="@Today" />
                        <ValidationMessage For="() => CreateInput.StartDate" class="text-danger small" />
                    </div>
                    <div class="col-6 col-md-2">
                        <label for="endDate" class="form-label small mb-1">End Date</label>
                        <InputDate @bind-Value="CreateInput.EndDate" id="endDate" class="form-control form-control-sm"
                            min="@Tomorrow" />
                        <ValidationMessage For="() => CreateInput.EndDate" class="text-danger small" />
                    </div>
                    <div class="col-12 col-md-4">
                        <button type="submit" class="btn btn-sm btn-success w-100" disabled="@IsCreating">
                            @if (IsCreating)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                            }
                            Create
                        </button>
                    </div>
                </div>
            </EditForm>
        </div>
    }
    <div class="card-body">
        @if (Seasons.Count == 0)
        {
            <p class="text-muted mb-0">No seasons found.</p>
        }
        else
        {
            <QuickGrid TGridItem="SeasonDto" Items="FilteredSeasons.AsQueryable()"
                class="table table-responsive table-borderless table-hover">
                <PropertyColumn Title="Name" Property="s => s.Name" Sortable="true" IsDefaultSortColumn="true" />
                <PropertyColumn Title="Start Date" Property="s => s.StartDate" Format="d" Sortable="true" />
                <TemplateColumn Title="End Date" SortBy="GridSort<SeasonDto>.ByAscending(s => s.EndDate)">
                    @(context.EndDate?.ToShortDateString() ?? "â€”")
                </TemplateColumn>
                <TemplateColumn Title="Status">
                    @if (context.IsComplete)
                    {
                        <span class="badge bg-secondary">Complete</span>
                    }
                    else if (IsSeasonActive(context))
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Inactive</span>
                    }
                </TemplateColumn>
            </QuickGrid>
        }
    </div>
</div>