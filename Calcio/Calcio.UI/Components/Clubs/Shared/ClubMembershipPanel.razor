@using Calcio.Shared.DTOs.ClubJoinRequests
@using Calcio.Shared.DTOs.Clubs
@using Calcio.Shared.Enums
@using Calcio.UI.Components.Clubs.Shared
@using Microsoft.AspNetCore.Components.Forms

@if (CreatedClub is not null)
{
    <div class="alert alert-success" role="alert">
        Club '@CreatedClub.Name' created.
    </div>
    <a class="btn btn-primary" href="/clubs/@CreatedClub.Id">Manage club</a>
}
else
{
    @if (AllClubs.Count > 0)
    {
        <h5>Find and join an existing club</h5>

        <FilterableClubsGrid Clubs="AllClubs" CurrentJoinRequest="CurrentJoinRequest" />
    }

    @if (CurrentJoinRequest?.Status != RequestStatus.Pending)
    {
        <h5>Create a club</h5>

        @if (!string.IsNullOrEmpty(StatusMessage))
        {
            <div class="alert alert-@StatusMessageClass" role="alert">
                @StatusMessage
            </div>
        }

        <EditForm Model="Input" method="post" OnValidSubmit="CreateClubAsync" FormName="createClub">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />
            <div class="row g-3 mb-3">
                <div class="col-12 col-md-4">
                    <div class="form-floating">
                        <InputText @bind-Value="Input.Name" id="Input.Name" class="form-control" aria-required="true"
                                   placeholder="Club Name" />
                        <label for="Input.Name">Club Name</label>
                    </div>
                    <ValidationMessage For="() => Input.Name" class="text-danger" />
                </div>
                <div class="col-6 col-md-4">
                    <div class="form-floating">
                        <InputText @bind-Value="Input.City" id="Input.City" class="form-control" aria-required="true"
                                   placeholder="City" />
                        <label for="Input.City">City</label>
                    </div>
                    <ValidationMessage For="() => Input.City" class="text-danger" />
                </div>
                <div class="col-6 col-md-4">
                    <div class="form-floating">
                        <InputSelect @bind-Value="Input.State" id="Input.State" class="form-select" aria-required="true">
                            <option value="">-- Select State --</option>
                            @foreach (var s in UsStateAbbreviations)
                            {
                                <option value="@s">@s</option>
                            }
                        </InputSelect>
                        <label for="Input.State">State</label>
                    </div>
                    <ValidationMessage For="() => Input.State" class="text-danger" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary" disabled="@IsSubmitting">
                @if (IsSubmitting)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                }
                Create Club
            </button>
        </EditForm>
    }
}