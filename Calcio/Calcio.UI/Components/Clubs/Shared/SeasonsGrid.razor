@using Calcio.Shared.DTOs.Seasons
@using Microsoft.AspNetCore.Components.QuickGrid

<div class="card shadow mb-4">
    <div class="card-header">
        <h6 class="mb-0">Seasons</h6>
    </div>
    <div class="card-body">
        @if (IsLoading)
        {
            <div class="d-flex justify-content-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">@ErrorMessage</div>
        }
        else if (Seasons.Count == 0)
        {
            <p class="text-muted mb-0">No seasons found.</p>
        }
        else
        {
            <QuickGrid TGridItem="SeasonDto" Items="Seasons.AsQueryable()"
                class="table table-responsive table-borderless table-hover">
                <PropertyColumn Title="Name" Property="s => s.Name" />
                <TemplateColumn Title="Start Date">
                    @context.StartDate.ToShortDateString()
                </TemplateColumn>
                <TemplateColumn Title="End Date">
                    @(context.EndDate?.ToShortDateString() ?? "â€”")
                </TemplateColumn>
                <TemplateColumn Title="Status">
                    @if (context.IsComplete)
                    {
                        <span class="badge bg-secondary">Complete</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Active</span>
                    }
                </TemplateColumn>
            </QuickGrid>
        }
    </div>
</div>