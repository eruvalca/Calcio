@using Calcio.Shared.DTOs.Players
@using Microsoft.AspNetCore.Components.QuickGrid

<div class="card shadow mb-4">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <form @onsubmit:preventDefault class="flex-grow-1 me-2">
                <div class="input-group" role="search">
                    <input type="text" @bind-value="SearchTerm" @bind-value:event="oninput" id="PlayerSearch"
                        name="PlayerSearch" class="form-control" placeholder="Search by name" autocomplete="off" />
                </div>
            </form>
            <button type="button" class="btn btn-primary" @onclick="ShowImportModal">
                <i class="bi bi-upload me-1"></i>Bulk Import
            </button>
        </div>
    </div>
    <div class="card-body">
        @if (Players.Count == 0)
        {
            <p class="text-muted mb-0">No players in this club.</p>
        }
        else
        {
            <QuickGrid TGridItem="ClubPlayerDto" Items="FilteredPlayers.AsQueryable()"
                class="table table-responsive table-borderless table-hover">
                <PropertyColumn Title="Name" Property="p => p.FullName" Sortable="true" IsDefaultSortColumn="true" />
                <PropertyColumn Title="Date of Birth" Property="p => p.DateOfBirth" Format="yyyy-MM-dd" Sortable="true" />
                <TemplateColumn Title="Gender">
                    @if (context.Gender.HasValue)
                    {
                        <span>@context.Gender.Value</span>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </TemplateColumn>
                <TemplateColumn Title="Jersey #">
                    @if (context.JerseyNumber.HasValue)
                    {
                        <span class="badge bg-primary">@context.JerseyNumber</span>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </TemplateColumn>
                <TemplateColumn Title="Tryout #">
                    @if (context.TryoutNumber.HasValue)
                    {
                        <span class="badge bg-secondary">@context.TryoutNumber</span>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </TemplateColumn>
            </QuickGrid>
        }
    </div>
</div>

<BulkPlayerImportModal ClubId="ClubId" IsVisible="ShowImport" OnClose="HideImportModal" OnImportComplete="HandleImportComplete" />