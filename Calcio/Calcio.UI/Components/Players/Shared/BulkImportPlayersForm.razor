@using Calcio.Shared.DTOs.Players.BulkImport
@using Calcio.Shared.Endpoints
@using Calcio.Shared.Results
@using Calcio.Shared.Services.Players
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web

<div class="bulk-import-form">
    @* Step indicator *@
    <div class="d-flex justify-content-center mb-4">
        <div class="step-indicator d-flex align-items-center gap-2">
            <div class="step @(CurrentStep >= 1 ? "active" : "") @(CurrentStep > 1 ? "completed" : "")">
                <span class="step-number">1</span>
                <span class="step-label d-none d-sm-inline">Upload</span>
            </div>
            <div class="step-connector @(CurrentStep > 1 ? "completed" : "")"></div>
            <div class="step @(CurrentStep >= 2 ? "active" : "") @(CurrentStep > 2 ? "completed" : "")">
                <span class="step-number">2</span>
                <span class="step-label d-none d-sm-inline">Preview</span>
            </div>
            <div class="step-connector @(CurrentStep > 2 ? "completed" : "")"></div>
            <div class="step @(CurrentStep >= 3 ? "active" : "")">
                <span class="step-number">3</span>
                <span class="step-label d-none d-sm-inline">Import</span>
            </div>
        </div>
    </div>

    @* Error message *@
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@ErrorMessage
        </div>
    }

    @* Step 1: Upload *@
    @if (CurrentStep == 1)
    {
        <div class="step-content">
            <h5 class="mb-3">Upload Player File</h5>
            <p class="text-muted">Upload a CSV or Excel file containing player data. Download a template to see the expected
                format.</p>

            <div class="mb-4">
                <div class="d-flex gap-2">
                    <a href="@(Routes.Players.BulkImport.ForTemplate(ClubId))?format=csv"
                        class="btn btn-outline-secondary btn-sm" download>
                        <i class="bi bi-file-earmark-text me-1"></i>Download CSV Template
                    </a>
                    <a href="@(Routes.Players.BulkImport.ForTemplate(ClubId))?format=xlsx"
                        class="btn btn-outline-secondary btn-sm" download>
                        <i class="bi bi-file-earmark-spreadsheet me-1"></i>Download Excel Template
                    </a>
                </div>
            </div>

            <div class="upload-area border rounded p-4 text-center @(IsDragOver ? "border-primary bg-light" : "border-dashed")"
                @ondragover="HandleDragOver" @ondragover:preventDefault @ondragleave="HandleDragLeave" @ondrop="HandleDrop"
                @ondrop:preventDefault>
                <i class="bi bi-cloud-upload display-4 text-muted"></i>
                <p class="mt-2 mb-3">Drag and drop your file here, or</p>
                <InputFile OnChange="OnFileSelected" id="importFile" class="d-none" accept=".csv,.xlsx,.xls"
                    disabled="@IsProcessing" />
                <label for="importFile" class="btn btn-primary">
                    <i class="bi bi-folder2-open me-1"></i>Choose File
                </label>
                <p class="small text-muted mt-2 mb-0">Supported: CSV, Excel (.xlsx, .xls) • Max 10 MB</p>
            </div>

            @if (SelectedFileName is not null)
            {
                <div class="mt-3 d-flex align-items-center gap-2">
                    <i class="bi bi-file-earmark-check text-success"></i>
                    <span>@SelectedFileName</span>
                    <button type="button" class="btn btn-sm btn-outline-danger" @onclick="ClearFile" disabled="@IsProcessing">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            }

            @if (IsProcessing)
            {
                <div class="mt-3">
                    <div class="progress" role="progressbar">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 100%">
                            Validating...
                        </div>
                    </div>
                </div>
            }

            <div class="mt-4 d-flex justify-content-between">
                <a href="@CancelUrl" class="btn btn-outline-secondary">Cancel</a>
                <button type="button" class="btn btn-primary" @onclick="ValidateFile"
                    disabled="@(SelectedFile is null || IsProcessing)">
                    Validate & Preview <i class="bi bi-arrow-right ms-1"></i>
                </button>
            </div>
        </div>
    }

    @* Step 2: Preview *@
    @if (CurrentStep == 2 && ValidationResult is not null)
    {
        <div class="step-content">
            <h5 class="mb-3">Preview & Edit</h5>

            @* Column mapping summary *@
            @if (ValidationResult.ColumnMappings.Count > 0)
            {
                <div class="card mb-3">
                    <div class="card-header py-2">
                        <button class="btn btn-link btn-sm text-decoration-none p-0" type="button"
                            @onclick="() => ShowColumnMappings = !ShowColumnMappings">
                            <i class="bi @(ShowColumnMappings ? "bi-chevron-down" : "bi-chevron-right") me-1"></i>
                            Column Mappings
                            @if (ValidationResult.MissingRequiredColumns.Count > 0)
                            {
                                <span class="badge bg-danger ms-2">@ValidationResult.MissingRequiredColumns.Count missing</span>
                            }
                        </button>
                    </div>
                    @if (ShowColumnMappings)
                    {
                        <div class="card-body py-2">
                            <div class="row row-cols-2 row-cols-md-4 g-2">
                                @foreach (var mapping in ValidationResult.ColumnMappings)
                                {
                                    <div class="col">
                                        <div class="d-flex align-items-center gap-1 small">
                                            @if (mapping.IsDetected)
                                            {
                                                <i class="bi bi-check-circle text-success"></i>
                                            }
                                            else if (mapping.IsRequired)
                                            {
                                                <i class="bi bi-x-circle text-danger"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-dash-circle text-muted"></i>
                                            }
                                            <span class="@(mapping.IsRequired && !mapping.IsDetected ? "text-danger fw-bold" : "")">
                                                @mapping.FieldName
                                            </span>
                                            @if (mapping.DetectedColumnName is not null)
                                            {
                                                <span class="text-muted">→ "@mapping.DetectedColumnName"</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (ValidationResult.MissingRequiredColumns.Count > 0)
                            {
                                <div class="alert alert-warning mt-2 mb-0 py-2 small">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    Required columns not found: <strong>@string.Join(", ",
                                                                ValidationResult.MissingRequiredColumns)</strong>.
                    Please update your file headers or <a
                        href="@(Routes.Players.BulkImport.ForTemplate(ClubId))?format=csv">download our template</a>.
                </div>
                                }
                        </div>
                    }
                </div>
            }

            @* Summary stats *@
            <div class="row row-cols-2 row-cols-md-4 g-2 mb-3">
                <div class="col">
                    <div class="card border">
                        <div class="card-body py-2 text-center">
                            <div class="fs-4 fw-bold text-success">@ValidationResult.ValidCount</div>
                            <small class="text-body-secondary">Valid</small>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card border">
                        <div class="card-body py-2 text-center">
                            <div class="fs-4 fw-bold text-danger">@ValidationResult.ErrorCount</div>
                            <small class="text-body-secondary">Errors</small>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card border">
                        <div class="card-body py-2 text-center">
                            <div class="fs-4 fw-bold text-warning">@ValidationResult.WarningCount</div>
                            <small class="text-body-secondary">Warnings</small>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card border">
                        <div class="card-body py-2 text-center">
                            <div class="fs-4 fw-bold text-primary">@MarkedForImportCount</div>
                            <small class="text-body-secondary">Selected</small>
                        </div>
                    </div>
                </div>
            </div>

            @* Warning summary panel - grouped by message type *@
            @if (ValidationResult.WarningCount > 0)
            {
                <div class="alert alert-warning py-2 mb-3">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>@ValidationResult.WarningCount warning(s)</strong>
                        <span class="text-body-secondary small">across @ValidationResult.Rows.Count(r => r.Warnings.Count > 0)
                            rows</span>
                        <button class="btn btn-sm btn-link text-decoration-none p-0 ms-2" type="button"
                            @onclick="() => ShowWarningDetails = !ShowWarningDetails">
                            @(ShowWarningDetails ? "Hide" : "Details")
                        </button>
                    </div>
                    @if (ShowWarningDetails)
                    {
                        <ul class="mb-0 mt-2 small">
                            @foreach (var (message, count) in GroupedWarnings)
                            {
                                <li>
                                    <span class="badge bg-warning text-dark me-1">@count</span>
                                    @message
                                </li>
                            }
                        </ul>
                    }
                </div>
            }

            @* Filter buttons *@
            <div class="btn-group mb-3" role="group" aria-label="Filter rows">
                <button type="button"
                    class="btn btn-sm @(CurrentFilter == GridFilter.All ? "btn-secondary" : "btn-outline-secondary")"
                    @onclick="() => CurrentFilter = GridFilter.All">
                    All <span class="badge bg-light text-dark ms-1">@ValidationResult.Rows.Count</span>
                </button>
                <button type="button"
                    class="btn btn-sm @(CurrentFilter == GridFilter.Errors ? "btn-danger" : "btn-outline-danger")"
                    @onclick="() => CurrentFilter = GridFilter.Errors" disabled="@(ValidationResult.ErrorCount == 0)">
                    Errors <span
                        class="badge @(CurrentFilter == GridFilter.Errors ? "bg-light text-danger" : "bg-danger") ms-1">@ValidationResult.ErrorCount</span>
                </button>
                <button type="button"
                    class="btn btn-sm @(CurrentFilter == GridFilter.Warnings ? "btn-warning" : "btn-outline-warning")"
                    @onclick="() => CurrentFilter = GridFilter.Warnings" disabled="@(ValidationResult.WarningCount == 0)">
                    Warnings <span
                        class="badge @(CurrentFilter == GridFilter.Warnings ? "bg-light text-warning" : "bg-warning text-dark") ms-1">@ValidationResult.Rows.Count(r
                                            => r.Warnings.Count > 0 && r.Errors.Count == 0)</span>
            </button>
            <button type="button"
                class="btn btn-sm @(CurrentFilter == GridFilter.Valid ? "btn-success" : "btn-outline-success")"
                @onclick="() => CurrentFilter = GridFilter.Valid">
                Valid <span
                    class="badge @(CurrentFilter == GridFilter.Valid ? "bg-light text-success" : "bg-success") ms-1">@ValidationResult.Rows.Count(r
                                        => r.IsValid && r.Warnings.Count == 0)</span>
            </button>
        </div>

            @* Preview grid *@
        @if (FilteredRows.Count > 0)
            {
                <div class="preview-grid-container">
                    <PlayerImportPreviewGrid Rows="FilteredRows" OnRowsModified="HandleRowsModified" />
                </div>
            }
            else if (ValidationResult.Rows.Count > 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>No rows match the current filter.
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>No data rows found in the file.
                </div>
            }

            <div class="mt-4 d-flex flex-wrap justify-content-between gap-2">
                <div>
                    <button type="button" class="btn btn-outline-secondary" @onclick="GoToStep1">
                        <i class="bi bi-arrow-left me-1"></i>Back
                    </button>
                </div>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-primary" @onclick="RevalidateRows"
                        disabled="@IsProcessing">
                        <i class="bi bi-arrow-clockwise me-1"></i>Re-validate
                    </button>
                    <button type="button" class="btn btn-success" @onclick="ExecuteImport"
                        disabled="@(MarkedForImportCount == 0 || IsProcessing)">
                        Import @MarkedForImportCount Player(s) <i class="bi bi-arrow-right ms-1"></i>
                    </button>
                </div>
            </div>
        </div>
    }

    @* Step 3: Import Result *@
    @if (CurrentStep == 3 && ImportResult is not null)
    {
        <div class="step-content text-center">
            <div class="py-4">
                <i class="bi bi-check-circle-fill text-success display-1"></i>
                <h4 class="mt-3">Import Complete!</h4>
                <p class="text-muted">
                    Successfully created <strong>@ImportResult.CreatedCount</strong> player(s).
                    @if (ImportResult.SkippedCount > 0)
                    {
                        <span>Skipped <strong>@ImportResult.SkippedCount</strong> row(s).</span>
                    }
                </p>
            </div>
            <div class="d-flex justify-content-center gap-2">
                <a href="/clubs/@ClubId/players" class="btn btn-primary">
                    <i class="bi bi-people me-1"></i>View Players
                </a>
                <button type="button" class="btn btn-outline-secondary" @onclick="StartOver">
                    <i class="bi bi-plus-circle me-1"></i>Import More
                </button>
            </div>
        </div>
    }
</div>