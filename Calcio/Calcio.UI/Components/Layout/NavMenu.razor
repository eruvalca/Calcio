@using Calcio.UI.Services.Theme
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing

<nav class="navbar fixed-bottom navbar-expand-sm bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Calcio</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
            aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <NavLink class="nav-link" href="counter">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="weather">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="auth">
                        <span class="bi bi-lock-nav-menu" aria-hidden="true"></span> Auth Required
                    </NavLink>
                </li>
            </ul>
            <div class="d-flex ms-auto align-items-center">
                <div class="dropdown dropup me-2">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle py-1 px-2" type="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        @GetThemeLabel()
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end py-1 small">
                        <li><button class="dropdown-item py-1 px-2 @(IsActive(ThemePreference.Light))" type="button"
                                @onclick="() => ChangeTheme(ThemePreference.Light)">☀️ Light</button></li>
                        <li><button class="dropdown-item py-1 px-2 @(IsActive(ThemePreference.Dark))" type="button"
                                @onclick="() => ChangeTheme(ThemePreference.Dark)">🌙 Dark</button></li>
                        <li><button class="dropdown-item py-1 px-2 @(IsActive(ThemePreference.System))" type="button"
                                @onclick="() => ChangeTheme(ThemePreference.System)">🌗 Auto</button></li>
                    </ul>
                </div>
                <AuthorizeView>
                    <Authorized>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <NavLink class="nav-link" href="Account/Manage">
                                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span>
                                    @context.User.Identity?.Name
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <form class="d-inline" action="Account/Logout" method="post">
                                    <AntiforgeryToken />
                                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                                    <button type="submit" class="btn btn-link nav-link">
                                        <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </Authorized>
                    <NotAuthorized>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <NavLink class="nav-link" href="Account/Register">
                                    <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="Account/Login">
                                    <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                                </NavLink>
                            </li>
                        </ul>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</nav>