@using Calcio.Shared.DTOs.Teams
@using Microsoft.AspNetCore.Components.QuickGrid

<div class="card shadow mb-4">
    <div class="card-header">
        <h6 class="mb-0">Teams</h6>
    </div>
    <div class="card-body">
        @if (IsLoading)
        {
            <div class="d-flex justify-content-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">@ErrorMessage</div>
        }
        else if (Teams.Count == 0)
        {
            <p class="text-muted mb-0">No teams found.</p>
        }
        else
        {
            <QuickGrid TGridItem="TeamDto" Items="Teams.AsQueryable()"
                class="table table-responsive table-borderless table-hover">
                <PropertyColumn Title="Name" Property="t => t.Name" />
                <TemplateColumn Title="Graduation Year">
                    @(context.GraduationYear?.ToString() ?? "â€”")
                </TemplateColumn>
            </QuickGrid>
        }
    </div>
</div>